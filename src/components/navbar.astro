---
import Button from './button.astro';

interface Props {
    links: {name: string, href: string, button: boolean}[];
}

const { links } = Astro.props;
---

<nav class="font-medium">
    <ul class="flex flex-row gap-8 items-center">
        {links.map((link) => (
            link.button ? <Button href={link.href}>{link.name}</Button> : <li><a href={link.href}>{link.name}</a></li>
        ))}
    </ul>
</nav>
